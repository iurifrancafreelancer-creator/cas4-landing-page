<script>
  const animateCounter = (counter) => {
    const target = +counter.getAttribute('data-target');
    const prefix = counter.getAttribute('data-prefix');
    const suffix = counter.getAttribute('data-suffix');
    const duration = 2000; // Duração da animação em milissegundos (2 segundos)
    
    let startTimestamp = null;
    
    const step = (timestamp) => {
      if (!startTimestamp) startTimestamp = timestamp;
      const progress = Math.min((timestamp - startTimestamp) / duration, 1);
      
      // Efeito de desaceleração (ease-out)
      const easeOutProgress = 1 - Math.pow(1 - progress, 3);
      let currentVal = Math.floor(easeOutProgress * target);
      
      let formattedVal = currentVal;
      // Adiciona o ponto para milhares (ex: 1500 vira 1.500)
      if (target >= 1000) {
        formattedVal = currentVal.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".");
      }
      
      counter.innerText = `${prefix}${formattedVal}${suffix}`;
      
      if (progress < 1) {
        window.requestAnimationFrame(step);
      } else {
         // Garante que o valor final seja exato
         let finalVal = target >= 1000 ? target.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") : target;
         counter.innerText = `${prefix}${finalVal}${suffix}`;
      }
    };
    
    window.requestAnimationFrame(step);
  };

  // O Intersection Observer garante que a animação só comece quando o usuário rolar a tela até os números
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const counters = entry.target.querySelectorAll('.counter');
        counters.forEach(counter => animateCounter(counter));
        observer.unobserve(entry.target); // Para a observação após animar
      }
    });
  }, { threshold: 0.3 }); // Inicia quando 30% da seção estiver visível

  const statsContainer = document.getElementById('stats-container');
  if(statsContainer) {
    observer.observe(statsContainer);
  }
</script>