---
import '../global.css';
interface Props {
	title: string;
}
const { title } = Astro.props;
const wppLink = "https://wa.me/55SEUNUMERO?text=Olá,%20gostaria%20de%20agendar%20um%20diagnóstico%20gratuito!";
---

<!doctype html>
<html lang="pt-BR" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
